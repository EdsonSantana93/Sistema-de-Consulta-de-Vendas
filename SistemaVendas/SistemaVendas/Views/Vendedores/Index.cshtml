@model IEnumerable<SistemaVendas.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedores";
}

<h2 class="text-success">@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Criar Novo</a>
</p>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataNascimento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SalarioBase)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(Model => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => item.DataNascimento)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => item.SalarioBase)
                        </td>
                        <td>
                            <a asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                            <a asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a>
                            <a asp-action="Delete" asp-route-Id="@item.Id">Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
